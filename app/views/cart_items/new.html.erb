<%= form_for @cart_item, url: {action: :create} do |f| %>
  <p><%= f.label :name, '商品名：' %><%= params[:name] %></p>
  <p><%= f.label :price, '価格：' %><%= params[:price] %></p>
  <%= f.hidden_field :product_id, :product_id => @cart_item.product_id %>
    <p><%= f.label :qty, '数量' %>
    <%= f.text_field :qty %></p>
    <%= f.submit '登録' %>
<% end %>